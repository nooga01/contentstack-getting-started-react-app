{% set pageTitle = 'What we do' %}
{% set wrapperClass = 'CIS' %}

{% extends "layout.nunjucks" %}

{% block page_banner%}
    {{
        HeroBanner.render({
            bannerClass: 'banner-no-image',
            title: 'What we do to accelerate energy infrastructure'
        })
    }}
{% endblock %}
