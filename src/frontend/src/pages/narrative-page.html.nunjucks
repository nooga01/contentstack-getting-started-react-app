            CTA: {
                btnText: 'READ MORE on energyco',
                btnLink: ''
            },
            imageSrc: '/static/img/what-to-do-1.jpg'
        })
    }}

    {{
        ContentWithImage.render({
            imgPosition: 'left-image', 
            categoryTitle: 'Our role on the roadmap',
            descriptionRichText: '
                <ul class="feature-bullet-list">
                    <li>We have a strict mandate to only recommend those projects which can demonstrate value to their host communities</li>
