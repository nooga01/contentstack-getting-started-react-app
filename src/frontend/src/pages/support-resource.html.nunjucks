{% extends "layout.nunjucks" %}

{% block page_banner%}
    {{HeroBanner.render(banner)}}
{% endblock %}
{% block content %}
    {{FeatureTile.render(featureTiles)}}

    {# resource section template #}
    <div class="resource-cards-section content-wrapper">
        <div class="grid-container">
            <h2 class="section-title larger">Browse all of our resources</h2>
            <div class="grid-x grid-margin-x">
                <div class="cell small-12">
                    {% include "../templates/components/TagTab/index.nunjucks" %}
                </div>
                <div class="cell small-12">
                    <select>
                        <option>Sort by newest</option>
                        <option>Sort by oldest</option>
                        <option>A - Z</option>
                        <option>Z - A</option>
                    </select>
                </div>
                <div class="cell small-12 ResourceFilter-Container">
                    {% include "../templates/components/Filters/index.nunjucks" %}
                    {{ResourceCards.render(resouceCardList)}}
                    {# Resource card list include Pagination component #}
                </div>
            </div>
        </div>
    </div>

{% endblock %}