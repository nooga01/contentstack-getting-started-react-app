
{% macro render(sContent, topMargin, bottomMargin, fullWidth) %}
    <!-- START : Rich Text Component //-->
    <div class="rte-content {{ 'top-margin' if topMargin }} {{ 'bottom-margin' if bottomMargin }} {{ 'full-width' if fullWidth }}">
        <div class="grid-container no-padding-if-inside-grid-container">
			{{ sContent | safe }}
        </div>
    </div> 
    <!-- END : Rich Text Component //-->
{% endmacro %}